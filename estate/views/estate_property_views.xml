<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- fuers Action Menu-->
    <record id="test_action1" model="ir.actions.act_window">
        <field name="name">Action1</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="test_action2" model="ir.actions.act_window">
        <field name="name">Action2</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Tree View ist dafuer da damit man die Spaltennamen der jeweiligen Felder bekommt-->
    <record id="estate_tree" model="ir.ui.view">
        <field name="name">estate.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" string="Title" width="100px"/>
                <field name="postcode" string="Postcode" width="100px"/>
                <field name="bedrooms" string="Bedrooms" width="100px"/>
                <field name="living_area" string="Living Area (sqm)" width="100px"/>
                <field name="expected_price" string="Expected Price" width="100px"/>
                <field name="selling_price" string="Selling Price" width="100px"/>
                <field name="date_availability" string="Available From" width="100px"/>
                <field name="estate_property_id" string="Property Type" width="100px"/>
            </tree>
        </field>
    </record>

    <!-- Group soll die die Gruppierungen darstellen und somit eine besser lesbare Oberflaeche bekommen-->
    <record id="group_estate" model="ir.ui.view">
        <field name="name">Group Test</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                <group>
                    <group>
                        <field name="estate_property_id"/>
                    </group>
                    <group>
                       <field name="postcode"/>
                    </group>
                    <group>
                        <field name="date_availability"/>
                     </group>
                     <group>
                        <field name="expected_price"/>
                     </group>
                     <group>
                        <field name="selling_price"/>
                     </group>
                    <notebook>
                       <page string="Description">
                           <group>
                           <field name="description" string="description"/>
                           <field name="bedrooms" string="bedrooms"/>
                           <field name="living_area" string="Living Area (sqm)"/>
                           <field name="facades" string="Facades"/>
                           <field name="garage" string="Garage"/>
                           <field name="garden" string="Garden"/>
                           <field name="garden_area" string="Garden Area (sqm)"/>
                           <field name="garden_orientation" string="Garden Orientation"/>
                        </group>
                       </page>
                       <page string="Other Info">
                            <group>
                                <field name="salesperson_id" string="Salesman"/>
                                <field name="buyer_id" string="Buyer"/>
                            </group>
                       </page>
                   </notebook>
               </group>
           </sheet> 
        </form>
     </field>
    </record>
    
    <!-- Seach soll dazu dienen die Suchleiste zu erstellen-->
    <record id="search_test" model="ir.ui.view">
        <field name="name">Search Test</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="estate_property_id"/>
                    <filter string="Garden State" name="garden_state" domain="['|',('garden_state','=','offer received'),('garden_state','=','new')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Postcode"
                                name="postcode"
                                context="{'group_by':'postcode'}"/>
                    </group>
                </search>
        </field>

    </record>
</odoo>