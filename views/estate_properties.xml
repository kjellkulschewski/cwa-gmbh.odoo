<odoo>
  <data>

    <!-- list view -->

    <record id="estate_property_properties_list" model="ir.ui.view">
      <field name="name">PropertiesList</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <tree decoration-success="state in ('offer_received', 'offer_accepted')" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
          <field name="name" string="Title" width="100px"/>
          <field name="property_type_id" string="Property Type" width="100px"/>
          <field name="tag_ids" widget="many2many_tags" width="100px"/>
          <field name="postcode" width="25px"/>
          <field name="bedrooms"/>
          <field name="living_area" string="Living Area (sqm)"/>
          <field name="expected_price"/>
          <field name="selling_price"/>
          <field name="date_availability" string="Available From" optional="hide"/>
          <field name="state" invisible="True"/>
        </tree>
      </field>
    </record>

    <!-- form view -->

    <record id="estate_property_properties_form" model="ir.ui.view">
      <field name="name">PropertiesForm</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="action_sold" type="object" string="Sold" attrs="{'invisible': ['|',('state', '=', 'sold'),('state', '=', 'canceled')]}"/>
            <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': ['|',('state', '=', 'canceled'),('state', '=', 'sold')]}"/>
            <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
          </header>
          <sheet>
            <h1>
                <field name="name"/>
            </h1>
            <group>
              <group>
                <field name="postcode"/>
                <field name="date_availability" string="Available From"/>
              </group>
              <group>
                <field name="expected_price"/>
                <field name="best_price"/>
                <field name="selling_price"/>
              </group>
              <notebook>
                <page string="Description">
                  <group>
                    <field name="property_type_id" string="Property Type" options="{'can_create': False, 'can_write': False}"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" width="100px"/>
                    <field name="description"/>
                    <field name="bedrooms"/>
                    <field name="living_area" string="Living Area (sqm)"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area" string="Garden Area (sqm)" attrs="{'invisible': [('garden', '=', False)]}"/>
                    <field name="total_area" string="Total Area (sqm)" attrs="{'invisible': [('garden', '=', False)]}"/>
                    <field name="garden_orientation"/>
                    <field name="state"/>
                  </group>
                </page>
                <page string="Offers">
                  <field name="offer_ids" attrs="{'readonly': [('state', 'in', ('offer_accepted', 'sold', 'canceled'))]}"/>
                </page>
                <page string="Other Info">
                  <group>
                    <field name="salesperson_id" string="Salesman"/>
                    <field name="buyer_id"/>
                  </group>
                </page>
              </notebook>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- search view -->

    <record id="estate_property_properties_search" model="ir.ui.view">
      <field name="name">PropertiesSearch</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" string="Title" filter_domain="[('name', 'ilike', self)]"/>
          <field name="property_type_id"/>
          <field name="tag_ids"/>
          <field name="postcode"/>
          <field name="expected_price" filter_domain="[('expected_price', '&lt;=', self)]"/>
          <field name="bedrooms"/>
          <field name="living_area" string="Living Area (sqm)" filter_domain="[('living_area', '&gt;=', self)]"/>
          <field name="facades"/>
          <filter string="Available"
                  name="available"
                  domain="['|',('state', '=', 'new'),('state', '=', 'offer_received')]"
                  help="Estate Properties with State 'New' or 'Offer Received'"/>
          <group expand="0" string="Group By">
            <filter string="Postcode"
                    name="postcode"
                    context="{'group_by':'postcode'}"/>
          </group>
        </search>
      </field>
    </record>

    <!-- action -->

    <record id="estate_property_properties_action" model="ir.actions.act_window">
      <field name="name">Properties</field>
      <field name="res_model">estate.property</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_available': True}</field>
    </record>

  </data>
</odoo>