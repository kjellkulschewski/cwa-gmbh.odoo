<odoo>
  <data>

    <!-- list view -->

    <record id="estate_property_property_tags_list" model="ir.ui.view">
      <field name="name">PropertyTagList</field>
      <field name="model">estate.property.tag</field>
      <field name="arch" type="xml">
        <tree editable="bottom">
          <field name="name" string="Property Tag"/>
        </tree>
      </field>
    </record>

    <!-- form view -->

    <record id="estate_property_property_tags_form" model="ir.ui.view">
      <field name="name">PropertyTagForm</field>
      <field name="model">estate.property.tag</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
                <field name="name"/>
            </h1>
          </sheet>
        </form>
      </field>
    </record>

    <!-- action -->

    <record id="estate_property_property_tags_action" model="ir.actions.act_window">
      <field name="name">Property Tags</field>
      <field name="res_model">estate.property.tag</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>